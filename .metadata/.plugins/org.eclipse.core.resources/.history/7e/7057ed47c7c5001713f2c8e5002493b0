package heapify;

/**
 * 堆
 * @author admin
 *
 */
public class Heapify {

	/**
	 * 返回输入节点的父节点序号
	 * @param i 输入节点的序号
	 * @return
	 */
	public int parent(int i){
		return i/2;  //父节点角标
	}
	public int left(int i){
		return 2*i;
	}
	public int right(int i){
		return 2*i+1;
	}
	/**
	 * 维护最大堆的性质
	 * @param arr 最大堆的数组表示形式
	 * @param i 向最大堆中插入的序号
	 */
	public void maxHeapify(int[] arr,int i){
		int l=left(i);
		int r=right(i);
		if(l<=arr.length && arr[l]>arr[i]){
			
		}
	}
}
