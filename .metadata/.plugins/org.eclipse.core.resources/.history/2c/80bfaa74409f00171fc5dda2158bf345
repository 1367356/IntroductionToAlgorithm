package class1;

import java.io.InputStreamReader;
import java.util.Scanner;


public class LinkedList {
	            public Node first,newNode,last=null;  //创建三个节点，头节点，新节点，尾节点
	            public int count;
				class Node{
					Node link;
					int info;	
				}	
				public Node createLinked(){
					int num=0;
					String inputline;
    				Scanner scanner=new Scanner(System.in);
					while(true){
//						inputline=scanner.toString();
//						num=Integer.parseInt(inputline);
						num=scanner.nextInt();
						if(num==999)
							break;
						newNode=new Node();
						newNode.info=num;
						newNode.link=null;
						if(first ==null){
							first=newNode;
							last=newNode;
						}else{
							last.link=newNode;
							last=newNode;
						}
					}
					return first;
				}
				public  void insert(int i){                  //插入链表数据，可以用这个方法来创建链表，也可以读入数据来创建。
					Node newNode=new Node();
					newNode.info=i;
					newNode.link=null;
					if(first==null){
						first=newNode;
						last=newNode;
					}else{
						last.link=newNode;
						last=newNode;
					}
                     count++;
				}
				public  void  print(Node node){  //给一个头节点,打印链表
					while(node!=null){
						System.out.println(node.info);
						node=node.link;
					}
				}
				public static int getLength(Node node){  //获取链表长度
					int length=0;
					while(node!=null){
						node=node.link;
						length++;
					}
					return length;
				}
}
